<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".Kuis">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/papaninfokuis_v1"
                android:orientation="horizontal"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_weight="0.50">

                    <ImageView
                        android:layout_width="135dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="9dp"
                        android:background="@drawable/namaku" />

                    <TextView
                        android:id="@+id/akun"
                        android:layout_width="68dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="52dp"
                        android:layout_marginTop="15dp"
                        android:maxLength="8"
                        android:text="12345678"
                        android:textColor="@color/colorFont" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/papan_level" />

                    <ImageView
                        android:id="@+id/level"
                        android:layout_width="25dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="75dp"
                        android:layout_marginLeft="58dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="11dp"
                        app:srcCompat="@drawable/level1" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.50">

                    <ImageView
                        android:layout_width="350dp"
                        android:layout_height="35dp"
                        android:background="@drawable/papan_score"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_alignParentEnd="true"/>

                    <!--score-->
                    <TextView
                        android:id="@+id/score"
                        android:layout_width="31dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="120dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginRight="8dp"
                        android:text="100"
                        android:textColor="@color/colorText"
                        android:textSize="18sp" />
                </RelativeLayout>



            </LinearLayout>

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="320DP"
                android:textSize="25dp"/>


        </android.support.v7.widget.CardView>



    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_kuis"
        android:layout_width="345dp"
        android:layout_height="505dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:padding="0dp">
    </FrameLayout>



</LinearLayout>